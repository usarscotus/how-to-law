---
import BaseLayout from '~/layouts/BaseLayout.astro';
import CaseCard from '~/components/CaseCard';

const groups = [
  {
    title: 'Primary law',
    description: 'Official sources for binding decisions, statutes, and filings.',
    items: [
      {
        title: 'Supreme Court of the United States',
        href: 'https://www.supremecourt.gov/',
        description: 'Official docket, opinions, and rules from the Court itself.'
      },
      {
        title: 'GovInfo',
        href: 'https://www.govinfo.gov/',
        description: 'Authenticated access to the United States Code, Federal Register, and Code of Federal Regulations.'
      },
      {
        title: 'Congress.gov',
        href: 'https://www.congress.gov/',
        description: 'Legislation, committee reports, and bill tracking from the Library of Congress.'
      }
    ]
  },
  {
    title: 'Summaries & audio',
    description: 'Secondary explanations and oral argument recordings for quick orientation.',
    items: [
      {
        title: 'Legal Information Institute (Cornell)',
        href: 'https://www.law.cornell.edu/',
        description: 'Plain-language explanations of federal law and Supreme Court decisions.'
      },
      {
        title: 'Oyez',
        href: 'https://www.oyez.org/',
        description: 'Supreme Court case summaries, oral argument audio, and transcripts.'
      }
    ]
  },
  {
    title: 'Court data & research',
    description: 'Analytical tools and free dockets for tracking litigation.',
    items: [
      {
        title: 'CourtListener & RECAP Archive',
        href: 'https://www.courtlistener.com/',
        description: 'Search opinions and access PACER filings collected through the RECAP project.'
      },
      {
        title: 'Justia Dockets & Filings',
        href: 'https://dockets.justia.com/',
        description: 'Aggregated federal docket summaries and filing histories.'
      }
    ]
  },
  {
    title: 'Rules & practice guides',
    description: 'Procedural rules and practitioner-focused materials.',
    items: [
      {
        title: 'Federal Rules of Civil Procedure',
        href: 'https://www.uscourts.gov/rules-policies/current-rules-practice-procedure',
        description: 'Official text of the Federal Rules published by the Administrative Office of the U.S. Courts.'
      },
      {
        title: 'Supreme Court Rules',
        href: 'https://www.supremecourt.gov/ctrules/ctrules.aspx',
        description: 'Procedural rules governing practice before the Supreme Court.'
      }
    ]
  }
];
---
<BaseLayout
  title="Resources"
  description="Trusted sources for primary law, case summaries, court data, and practice materials."
>
  <section class="bg-background">
    <div class="mx-auto max-w-6xl px-4 py-16 sm:px-6 lg:px-8">
      <header class="max-w-3xl space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-accent">Reference shelf</p>
        <h1 class="text-3xl font-semibold tracking-tight text-foreground sm:text-4xl">Resources</h1>
        <p class="text-lg text-foreground/75">
          Use these reputable portals to verify doctrine, gather filings, and listen to appellate argument. Each link opens in a
          new tab and complements the classroom lessons.
        </p>
      </header>
      <div class="mt-12 space-y-12">
        {groups.map((group) => (
          <section class="space-y-6">
            <div>
              <h2 class="text-2xl font-semibold text-foreground">{group.title}</h2>
              <p class="text-sm text-foreground/70">{group.description}</p>
            </div>
            <div class="grid gap-6 md:grid-cols-2">
              {group.items.map((item) => (
                <CaseCard title={item.title} href={item.href} description={item.description} />
              ))}
            </div>
          </section>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
